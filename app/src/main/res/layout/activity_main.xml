<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".MainActivity">

    <ImageView
        android:layout_width="500dp"
        android:layout_height="400dp"
        android:rotation="45"
        android:src="@drawable/ic_baseline_signal_cellular_4_bar_24"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="70dp"
        android:layout_marginBottom="120dp"
        app:layout_constraintBottom_toTopOf="@id/login_with_fb"/>

    <Button
    android:id="@+id/login_with_fb"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="30dp"
    android:layout_marginEnd="30dp"
    android:layout_marginTop="150dp"
    app:layout_constraintTop_toBottomOf="@id/trivia_text"
    android:text="Log in with Facebook"
    android:textColor="@color/black"
    android:background="@drawable/layout_bg"
        android:backgroundTint="@color/white"
    />

    <Button
        android:id="@+id/up_with_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:backgroundTint="@color/white"
        android:text="Up with Email"
        android:textColor="@color/black"
        app:iconTint="@color/white"
        app:layout_constraintEnd_toEndOf="@id/login_with_fb"
        app:layout_constraintStart_toStartOf="@id/login_with_fb"
        app:layout_constraintTop_toBottomOf="@id/login_with_fb" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:background="@drawable/layout_bg"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:text="GAME NOW"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/up_with_email"
        tools:layout_editor_absoluteX="30dp" />

    <TextView
        android:layout_width="14dp"
        android:layout_height="12dp"
        android:layout_marginTop="20dp"
        android:text="-OR-"
        android:textColor="@color/grey"
        app:layout_constraintEnd_toEndOf="@id/login_with_fb"
        app:layout_constraintStart_toStartOf="@id/login_with_fb"
        app:layout_constraintTop_toBottomOf="@id/login_with_fb" />

    <ImageView
        android:id="@+id/arrow"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/ic_baseline_circle_24"
        android:src="@drawable/ic_baseline_arrow_circle_down_24"
        app:layout_constraintEnd_toEndOf="@id/trivia_text"
        app:layout_constraintStart_toStartOf="@id/trivia_text"
        app:layout_constraintTop_toBottomOf="@id/trivia_text"
        />
<ImageView
    android:id="@+id/rectangle"
    android:src="@drawable/layout_shape"
    android:layout_width="match_parent"
    android:layout_height="250dp"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintBottom_toTopOf="@id/trivia_text"
    android:layout_marginBottom="10dp"
    />
    <ImageView
        android:id="@+id/lion"
        android:background="@drawable/lion_image"
        android:layout_width="150dp"
        android:layout_height="150dp"
        app:layout_constraintStart_toStartOf="@id/trivia_text"
        app:layout_constraintEnd_toEndOf="@id/trivia_text"
        app:layout_constraintBottom_toTopOf="@id/trivia_text"
        android:layout_marginBottom="10dp"
        />
    <TextView
        android:id="@+id/trivia_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="200dp"
        android:text="Trivia"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:textSize="40sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:text="LOG IN"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="20dp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>